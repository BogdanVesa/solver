<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DidYouKnow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/clear_button_background"
            android:onClick="HomeBTN"
            app:srcCompat="@drawable/ic_home" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textColor="@color/tanAccent"
            android:textSize="22sp"
            android:text="I.Proprietăți ale numerelor reale:"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginVertical="10dp"
            android:gravity="center"
            android:textColor="@color/tanAccent"
            android:textSize="22sp"
            android:text="1.Proprietățile adunării numerelor reale"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginVertical="10dp"
            android:gravity="center"
            android:text="1.1 Comutativitatea: a+b=b+a "
            android:textColor="@color/tanAccent"
            android:textSize="22sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginVertical="10dp"
            android:gravity="center"
            android:text="1.2 Asociativitatea: (a+b)+c=a+(b+c)"
            android:textColor="@color/tanAccent"
            android:textSize="22sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginVertical="10dp"
            android:textAlignment="viewStart"
            android:text="1.3 Dacă a este un număr real atunci, a+0=a și 0+a=a"
            android:textColor="@color/tanAccent"
            android:textSize="22sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:textColor="@color/tanAccent"
            android:textSize="22sp"
            android:textAlignment="viewStart"
            android:text="2.Proprietățile înmulțirii numerelor reale"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginVertical="10dp"
            android:gravity="center"
            android:text="2.1 Comutativitate: a*b=b*a"
            android:textColor="@color/tanAccent"
            android:textSize="22sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginVertical="10dp"
            android:gravity="center"
            android:text="2.2 Asociativitatea: (a*b)*c = a*(b*c)"
            android:textColor="@color/tanAccent"
            android:textSize="22sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginVertical="10dp"
            android:textAlignment="viewStart"
            android:text="2.3 Daca a este numar real atunci, a*1=a si 1*a=a"
            android:textColor="@color/tanAccent"
            android:textSize="22sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginVertical="10dp"
            android:gravity="center"
            android:text="2.4 Distributia: (a+b)*c = a*c+b*c"
            android:textColor="@color/tanAccent"
            android:textSize="22sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textColor="@color/tanAccent"
            android:textSize="22sp"
            android:text="II.Formule pentru gradul al doilea:"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginVertical="10dp"
            android:gravity="center"
            android:text="1 Δ=b^2-a*a*c"
            android:textColor="@color/tanAccent"
            android:textSize="22sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginVertical="10dp"
            android:gravity="center"
            android:text="2 x1=(-b+√Δ)/2a"
            android:textColor="@color/tanAccent"
            android:textSize="22sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginVertical="10dp"
            android:gravity="center"
            android:text="3. x1=(-b+√Δ)/2a"
            android:textColor="@color/tanAccent"
            android:textSize="22sp"/>
    </LinearLayout>
</ScrollView>